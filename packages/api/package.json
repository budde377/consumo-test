{
  "name": "api",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch src --watch graphql --watch config -e yaml,yml,js,graphql,json --exec babel-node src",
    "test": "npm audit && npm run test:jest",
    "test:jest": "jest",
    "watch:jest": "jest --watch",
    "build:js": "babel src --out-dir dist",
    "build:docker": "docker build -t ${API_IMAGE:-budde377/consuno-api} -f docker/Dockerfile .",
    "deploy:docker": "docker push ${API_IMAGE:-budde377/consuno-api}",
    "deploy": "npn run deploy:docker",
    "build": "npm run build:js && npm run build:docker",
    "generate-data": "cd data && ../scripts/generate-data.js"
  },
  "dependencies": {
    "apollo-server": "^2.5.0",
    "graphql": "^14.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "babel-plugin-import-graphql": "^2.7.0",
    "faker": "^4.1.0",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.4",
    "jest": "^24.5.0",
    "nodemon": "^1.19.0"
  }
}
